<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

		<referenceContainer name="product.info">
			<block class="Aislend\Alert\Block\Alert" name="aislend.alert.info.notify" as="aislend.alert.notify" template="Aislend_Alert::catalog/product/notify.phtml"/>
		</referenceContainer>

		<referenceContainer name="catalog.product.related">
			<block class="Aislend\Alert\Block\Alert" name="aislend.alert.related.notify" as="aislend.alert.notify" template="Aislend_Alert::catalog/product/notify.phtml"/>
		</referenceContainer>
        
        <referenceContainer name="product.info.upsell">
            <block class="Aislend\Alert\Block\Alert" name="aislend.alert.upsell.notify" as="aislend.alert.notify" template="Aislend_Alert::catalog/product/notify.phtml"/>
        </referenceContainer>

        <referenceContainer name="before.body.end">
            <block class="Aislend\Alert\Block\Alert"  name="aislend.alert.info" template="Aislend_Alert::catalog/product/popup.phtml"/>
        </referenceContainer>
    </body>
</page>
